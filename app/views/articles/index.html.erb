<div class="container-fluid">
	<div class="row">
		<div class="col-xs-12">
			<div class="row">
				<!-- main-gallery of the page -->
				<section class="main-gallery">
					<div class="mask">
						<div class="slideset">
							<div class="slide">
								<div class="bg-stretch"><img src="<%= @featured_article.image %>" alt="image description"/></div>
								<div class="post-over">
									<div class="box">
										<div class="block">
											<h1 class="heading"><a href="/articles/<%= @featured_article.urlname %>"><%= @featured_article.title %></a></h1>
											<ul class="add-nav list-inline">
												<li>by <a href="javascript:void(0)"><%= @featured_article.author %></a></li>
												<li><a href="javascript:void(0);"><%= @featured_article.category %></a></li>
											</ul>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</section>
			</div>
		</div>
	</div>
</div>
<div class="container-fluid">
	<div class="row">
		<div class="col-xs-12">
			<div class="row">
				<!-- main-gallery of the page -->
				<section class="main-gallery">
					<div class="mask">
						<div class="slideset">
							<% @articles.each do |article| %>
								<div class="slide">
									<div class="bg-stretch"><img src="<%= article.image %>" alt="image description"/></div>
									<div class="post-over">
										<div class="box">
											<div class="block">
												<h1 class="heading"><a href="/articles/<%= article.urlname %>"><%= article.title %></a></h1>
												<ul class="add-nav list-inline">
													<li>by <a href="javascript:void(0)"><%= article.author %></a></li>
													<li><a href="javascript:void(0);"><%= article.category %></a></li>
												</ul>
											</div>
										</div>
									</div>
								</div>
							<% end %>
						</div>
					</div>
					<a class="btn-prev" href="#"><i class="fa fa-angle-left"></i></a>
					<a class="btn-next" href="#"><i class="fa fa-angle-right"></i></a>
				</section>
			</div>
		</div>
	</div>
</div>