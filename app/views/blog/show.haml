.container-fluid
  .row
    .col-xs-12
      .row
        / main-gallery of the page
        %section.main-banner.post
          .parallax-holder.add-banner
            .parallax-frame
              %img{:alt => "Image Description", :height => "1420", :src => "#{@post['image']}", :width => "2000"}
/ post-info of the page
%section.post-info
  -#.progress-bar-holder
    .progressbar &nbsp;
    %span.progress-info &nbsp;
  .container
    .row
      .col-xs-12
        %article.main-post
          - @post["body"].each do |section|

            - if section["type"] == "description"
              .txt-box
                %p=section["content"]

            - elsif section["type"] == "quote"
              %blockquote.blockquote
                %p 
                  %span &ldquo;
                  %span=section["content"][0]["content"]
                  %span &rdquo;
                %footer
                  %cite{:title => "Source Title"}=section["content"][1]["content"]

            - elsif section["type"] == "extract"
              %blockquote.blockquote.txt-box
                %p 
                  %span=section["content"][0]["content"]
                %footer
                  %cite{:title => "Source Title"}=section["content"][1]["content"]

            - elsif section["type"] == "poem"
              %h2{:style=>"text-align:center;"}=section["content"][0]["content"]
              %p{:style=>"text-align:center;"}=section["content"][1]["content"].gsub("\n", "<br/>").html_safe
              %footer{:style=>"text-align:center;"}
                %cite{:title => "Source Title"} 
                  %span - 
                  %span=section["content"][2]["content"]

